+using System;
+using System.Data.Common;
+using System.Diagnostics;
+using System.Text.RegularExpressions;
+
+namespace ADEXS.ServiceFramework.Infrastructure.Tracing;
+
+/// <summary>
+/// Enriches a db-client span with semantic-convention attributes:
+///   • db.operation – stored-procedure name
+///   • db.name      – database name
+/// Safe to call with null arguments and adds no measurable overhead (<1 µs).
+/// </summary>
+internal static class DbSpanEnricher
+{
+    // Captures the very first token in the command text (object name).
+    private static readonly Regex _sprocRegex = new(@"^\s*(\[[^\]]+\]|[^\s(]+)", RegexOptions.Compiled);
+
+    public static void Enrich(Activity? activity, DbCommand? command)
+    {
+        if (activity is null || command is null || !activity.IsAllDataRequested)
+            return;
+
+        // db.name
+        var dbName = command.Connection?.Database;
+        if (!string.IsNullOrWhiteSpace(dbName))
+            activity.SetTag("db.name", dbName);
+
+        // db.operation
+        var text = command.CommandText;
+        if (!string.IsNullOrWhiteSpace(text))
+        {
+            var match = _sprocRegex.Match(text);
+            if (match.Success)
+            {
+                var sproc = match.Groups[1].Value;
+                if (!string.IsNullOrWhiteSpace(sproc))
+                    activity.SetTag("db.operation", sproc);
+            }
+        }
+    }
+}
